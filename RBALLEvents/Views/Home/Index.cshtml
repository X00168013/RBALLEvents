@{
    ViewData["Title"] = "Home Page";
}


<link href="~/Content/Site.css" rel="stylesheet" />

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
    * {
        box-sizing: border-box;
    }

    .row {
        display: flex;
    }

    /* Create two equal columns that sits next to each other */
    .column {
        flex: 50%;
        padding: 10px;
    }
</style>

<div class="mainhead">
    <h1><b>RBALL EVENTS</b></h1>
    <p class="lead">
        RBALLEVENTS is an open source form where people from all over Ireland can add their local racquetball event details such as
        Open Days, Club leagues, Weekend Tournaments.
    </p>
    <p> An opportunity to find local racquetball events and tournaments in your area.You can find all the events local clubs are hosting and register here. Keep in the know of local racquetball events at clubs across Ireland.</p>
</div>

<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/rball1.jpg" alt="Racquetball" style="width:100%">

            </div>

            <div class="item">
                <img src="~/Images/rball2.png" alt="Racquetball Ireland" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/Images/rball3.jpg" alt="Racquetball" style="width:100%;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row">



    <div class="column" style="background-color:#aaa;">
        <h2><b>Find Racquetball Events</b></h2>
        <img src="~/Images/rball4.jpg" style="width:30%;" />
        <h5>There are plenty of racquetball events happening around you. Find an Irish racquetball event now</h5>
        <a href="@Url.Action("Location", "Home")" class="btn btn-primary btn-block">View Our Map</a>
        </div>
    <br />
    <div class="column" style="background-color:#aaa;">
        <h2><b>Add Racquetball Events</b></h2>
        <img src="~/Images/rball5.jpg" style="width:70%;" />
        <a href="@Url.Action("Create", "Events")" class="btn btn-primary btn-block">Add Event</a>
        <p><b>Is a racquetball event happening at your club?</b></p>

    </div>
</div>
